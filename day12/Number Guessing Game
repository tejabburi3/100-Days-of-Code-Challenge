import random

def number_check(guess, target):
    diff = abs(guess - target)

    if guess < target:
        if diff <= 10:
            print("ğŸ“‰ Little Low")
        else:
            print("â¬‡ï¸ Too Low")
        return False

    elif guess > target:
        if diff <= 10:
            print("ğŸ“ˆ Little High")
        else:
            print("â¬†ï¸ Too High")
        return False

    else:
        print("ğŸ¥³ You guessed correctly!")
        print("Thank you for playing â˜ºï¸")
        return True


print("ğŸ¯ Welcome to Number Guessing Game!")
while True:
    print("I'm thinking of a number between 1 and 100.")

    level = input("Choose difficulty ('easy' or 'hard'): ").lower()

    attempts = 0
    if level == "easy":
        attempts = 10
    elif level == "hard":
        attempts = 5
    else:
        print("âŒ Invalid Option ")
        continue


    target_number = random.randint(1, 100)

    for remaining in range(attempts, 0, -1):
        print(f"\nYou have {remaining} attempts left ğŸ§ ")

        try:
            guess = int(input("Make a guess: "))
        except ValueError:
            print("âŒ Please enter a valid number")
            continue

        if number_check(guess, target_number):
            break
    else:
        print("\nğŸ’€ GAME OVER")
        print(f"The correct number was: {target_number}")
    yes_no=input('Would you like to continue ? "Yes" or "No" : ').lower()
    if yes_no=='no':
        print("ğŸ‘‹ Thanks for playing!")
        break
