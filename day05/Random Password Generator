import random
import string

letters = string.ascii_letters
special_characters = string.punctuation
digits = string.digits

total_length = int(input("Enter total password length: "))
special_length = int(input("Enter number of special characters: "))
digits_length = int(input("Enter number of digits: "))

if total_length < special_length + digits_length:
    print("âŒ Error: Special characters + digits exceed total length")
else:
    password = ""
    password += ''.join(
        random.choices(
            letters,
            k=total_length - (special_length + digits_length)
        )
    )
    password += ''.join(random.choices(special_characters, k=special_length))
    password += ''.join(random.choices(digits, k=digits_length))

    password_list = list(password)
    random.shuffle(password_list)
    final_password = ''.join(password_list)

    print("ðŸ” Generated Password:", final_password)
