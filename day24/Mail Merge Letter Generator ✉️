#file path --> please enter your own file path 
# Read all names
with open("/file_path/my_text.txt", "r") as file1:
    names = file1.read().splitlines()

# Read template letter
with open("/file_path/matter.txt", "r") as file:
    template = file.read()

# Create personalized letters
for name in names:
    completed_letter = template.replace("name", name)

    with open(f"/file_path/letter_for_{name}.txt","w") as output_file:
        output_file.write(completed_letter)
